# -*- Makefile -*-

CC = gcc
SRC = main.c school.c
OBJ = main.o school.o
NAME = school

all: fclean $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

$(OBJ[1]): $(SRC[1])
	$(CC) -c $(SRC[1])

$(OBJ[2]): $(SRC[2])
	$(CC) -c $(SRC[2])

clean:
	rm -f *~ school

oclean:
	rm *.o

fclean:
	rm -f *~ school *.o
